<!-- Loop over each object in the projects array -->
{{#each posts as |post|}}
  <a class='post-link' href='/posts/{{post.id}}'>
    <div class='row mb-4 project' id='blog-post'>
      <div class='col-md-5'>
        <h2>
          <p id='blog-title'>{{post.title}}</p>
        </h2>
      </div>
      <div class='col-md-7'>
        <p>
          {{post.content}}

        </p>

      </div>
    </div>
  </a>
{{/each}}