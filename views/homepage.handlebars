<!-- Loop over each object in the projects array -->
{{#each posts as |post|}}
  <div class='row mb-4 project' id='blog-post'>
    <div class='col-md-5'>
      <h2>
        <a id='blog-title' href='/posts/{{post.id}}'>{{post.title}}</a>
      </h2>
    </div>
    <div class='col-md-7'>
      <p>
        {{post.content}}

      </p>

    </div>
  </div>
{{/each}}