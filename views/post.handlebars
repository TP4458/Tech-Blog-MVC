<div class="text-center" id="blog-by-id">
  <h2>{{title}}</h2>
    <hr>
      <p>Blog post by: {{user.userName}} on {{format_date createdAt}}</p>
      <p>{{content}}</p>
    <hr>

    <h5>Comments:</h5>  

  {{#each comments as |comment|}}
    <p>{{comment.commentBody}} - {{user.userName}} on {{format_date createdAt}} </p>
  
{{/each}}
{{!-- {{> comments}} --}}
<br>
<br>

{{#if loggedIn}}
 <div class="row mt-4" >
    <form class="form new-post-form">
      <div class="form-group">
        <label for="post-desc">Comment here:</label>
        <textarea class="form-input" id="comment-desc" name="comment-desc"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Create</button>
      </div>
    </form>
  </div>
  {{/if}}


  <script src="/js/comment.js"></script>

 