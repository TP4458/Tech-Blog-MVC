<div class='row mt-4'>
  <form class='form edit-comment-form'>
    <div class='form-group'>
      <label for='post-desc'>Edit comment here:<span
          id='post_id'
        >{{id}}</span></label>
      <textarea
        class='form-input'
        id='comment'
        name='post-desc'
      >{{comment.comment_content}}</textarea>
    </div>
    <div class='form-group'>
      <button type='submit' class='btn btn-primary'>Save</button>
      <button
        class='btn btn-sm btn-danger'
        id='delete-comment'
        data-id='{{comment.id}}'
      >Delete</button>
    </div>
  </form>
</div>