<div class="row">
  <div class="col-auto">
    <h3>Edit post:</h3>
  </div>
</div>

    <form class="form edit-post-form">
      <div class="form-group">
        <label for="blog-name">Title:</label>
        <input class="form-input" type="text" id="blog-name" name="post-title" value="{{post.title}}"/>
      </div>
      <p>Blog entry by: {{user.userName}}</p>
      <div class="form-group">
        <label for="blog-desc">Content:</label>
        <input class="form-input" id="blog-desc" name="post-content" value="{{post.content}}"/>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Create</button>
      </div>
    </form>
  </div>

  <script src="/js/editPost.js"></script>